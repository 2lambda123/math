
.PHONY: clang-tidy
clang-tidy:
		find $(folder) -name '$(files).cpp' -exec clang-tidy {} -checks='*perf*,*modernize*,*misc*,*google*,*readability*' -header-filter='./stan/*' -- $(CXXFLAGS) $(LDFLAGS) $(LDLIBS) $(INC_GTEST) $(CXXFLAGS_GTEST) $(CPPFLAGS) \;

.PHONY: clang-tidy-fix
clang-tidy-fix:
		find $(folder) -name '$(files).cpp' -exec clang-tidy {} -checks='*perf*,*modernize*,*misc*,*google*,*readability*' -header-filter='./stan/*' -fix -fix-errors -- $(CXXFLAGS) $(LDFLAGS) $(LDLIBS) $(INC_GTEST) $(CXXFLAGS_GTEST) $(CPPFLAGS) \;
