PYTHON2 ?= python

.PHONY: cpplint
cpplint:
	@$(PYTHON2) $(CPPLINT)/cpplint.py --output=vs7 --counting=detailed --root=stan --extension=hpp,cpp --filter=-runtime/indentation_namespace,-legal/copyright,-whitespace/indent,-runtime/reference,-build/include_order,-runtime/string $(shell (find stan test/unit/ -name '*.hpp' -o -name '*.cpp'))
